{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "EasyCartAuthDB": "Host=localhost;Port=5432;Database=<your_db_name>;Username=<your_pgadmin_username>;Password=<your_pgadmin_password>"
  },
  "APIGateway": {
    "SecretKey": "<your-secure-api-gateway-key>"
  },
  "JwtConfiguration": {
    "AccessTokenSecret": "<some-secret-key-generated-online>",
    "AccessTokenExpirationTimeInMinutes": 60,
    "RefreshTokenSecret": "<some-secret-key-generated-online>",
    "RefreshTokenExpirationTimeInMinutes": 120,
    "Issuer": "<url-of-token-issuer>",
    "Audience": "<url-of-audiences>"
  }
}
