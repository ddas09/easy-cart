{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "EasyCartAuthDB": "Host=localhost;Port=5432;Database=<your_db_name>;Username=<your_pgadmin_username>;Password=<your_pgadmin_password>"
  },
  "APIGateway": {
    "SecretKey": "<your-secure-api-gateway-key>"
  },
  "AccessTokenConfiguration": {
    "TokenSecretKey": "<some-secret-key-generated-online>",
    "ExpirationInMinutes": 60,
    "Issuer": "<url-of-token-issuer>",
    "Audience": "<url-of-audiences>"
  },
  "RefreshTokenConfiguration": {
    "TokenSecretKey": "<some-secret-key-generated-online>",
    "ExpirationInMinutes": 120,
    "Issuer": "<url-of-token-issuer>",
    "Audience": "<url-of-audiences>"
  }
}
